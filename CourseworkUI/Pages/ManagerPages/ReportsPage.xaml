<Page x:Class="CourseworkUI.Pages.ManagerPages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseworkUI.Pages.ManagerPages"
      mc:Ignorable="d" 
      d:DesignHeight="340" d:DesignWidth="800"
      Title="ReportsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Content="Employee salaries"
                Width="300"
                Height="80"
                FontSize="24"
                x:Name="EmployeeSalariesButton"
                Grid.Row="0" Click="EmployeeSalariesButton_Click"/>

            <Button Content="Policy"
                Width="300"
                Height="80"
                FontSize="24"
                x:Name="Policybutton"
                Grid.Row="1" Click="Policybutton_Click"/>
        </Grid>
    </Grid>
</Page>
